{
    "functions": {
        "source": "functions"
    },
    "firestore": {
        "rules": "firestore.rules"
    },
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/air",
                "function": "getAirKoreaQuality"
            },
            {
                "source": "/api/weather",
                "function": "getKmaWeather"
            },
            {
                "source": "/api/reverse-geocode",
                "function": "getReverseGeocode"
            },
            {
                "source": "/api/airport-weather",
                "function": "getJejuAirportWeather"
            },
            {
                "source": "/api/sea-trip",
                "function": "getSeaTripIndex"
            },
            {
                "source": "/api/fishing",
                "function": "getSeaFishingIndex"
            },
            {
                "source": "/api/flights",
                "function": "getJejuFlights"
            },
            {
                "source": "/api/clean-house",
                "function": "getCleanHouse"
            },
            {
                "source": "/api/pharmacy",
                "function": "getPharmacy"
            },
            {
                "source": "/api/subscribe-alerts",
                "function": "subscribeToWeatherAlerts"
            },
            {
                "source": "/api/test-alert",
                "function": "sendTestAlert"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}